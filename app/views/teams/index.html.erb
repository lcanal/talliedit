<% content_for :title  do %>
  <div class="flex justify-between align-middle text-base mb-5">
  <span class="text-4xl">
    Teams
  </span>
    <%= link_to 'New team', new_team_path, class: "rounded-lg py-3 px-5 bg-cyan-600 text-white block font-medium" %>
  </div>
<% end %>

<!-- Pending Memberships -->
<% if @pending_memberships.count > 0 %>
  <div class="border-b border-gray-200 pb-5 mb-7">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Pending Team Invitations</h3>
  </div>
  <%= render 'pending_memberships' %>
<% end %>

<div class="border-b border-gray-200 pb-5 mb-7">
  <h3 class="text-lg font-medium leading-6 text-gray-900">Your Teams</h3>
</div>

<div class="overflow-hidden bg-white shadow sm:rounded-md">
  <ul role="list" class="divide-y divide-gray-200">
    <%= render @teams %>
  </ul>
</div>


<!-- Member Memberships -->
<% if @member_teams.count > 0 %>
  <div class="border-b border-gray-200 pb-5 mb-7 mt-10">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Member Teams</h3>
  </div>

  <div class="overflow-hidden bg-white shadow sm:rounded-md">
    <ul role="list" class="divide-y divide-gray-200">
      <%= render @member_teams %>
    </ul>
  </div>

<% end %>