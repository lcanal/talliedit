<div id="<%= dom_id category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Count:</strong>
    <%= category.tallies.count %>
  </p>

  <div class="flex">
    <% if action_name != "show" %>
      <%= link_to "Show this category", category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Edit this category', edit_category_path(category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <%= button_to 'Add 1', increment_category_path(category), data: { turbo: false }, class: "ml-2  flex inline rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>

</div>
