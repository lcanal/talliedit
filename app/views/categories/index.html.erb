<% content_for :title  do %>
<div class="flex justify-between align-middle text-base mb-5">
  <span class="text-4xl">
    Categories
  </span>
  <%= link_to 'New category', new_category_path, class: "rounded-lg py-3 px-5 bg-cyan-600 text-white block font-medium" %>
</div>
<% end %>

<% @teams.each do |team| %>
  <h2 class="text-xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight mb-3"><%= team.name %></h2>
  <div class="overflow-hidden bg-white shadow sm:rounded-md">
  <ul role="list" class="divide-y divide-gray-200">
      <%= render team.categories %>
  </ul>
</div>
<% end %>
